                                                <LineSegment Point="1000,0"/>
                                                <LineSegment Point="1000,700"/>
                                                <LineSegment Point="0,700"/>
                                            </PathFigure>
                                        </PathGeometry>
                                        <EllipseGeometry RadiusX="500" RadiusY="350" Center="500,350"/>
                                    </GeometryGroup>
                                </GeometryDrawing.Geometry>
                                <GeometryDrawing.Pen>
                                    <Pen Brush="Black" Thickness="3"></Pen>
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>-->
                            <GeometryDrawing Geometry="M 500,0 500,200 
                                             M0,350 300,350
                                             M500,700 500,500
                                             M700,350 1000,350">
                                <GeometryDrawing.Pen>
                                    <Pen Thickness="20" Brush="Black" ></Pen>
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>
                            <GeometryDrawing Geometry="M 500,200 500,500
                                             M300,350 700,350
                                             M0,50 0,150
                                             M100,50 100,150
                                             M200,50 200,150
                                             M300,50 300,150
                                             M400,50 400,150
                                             M600,50 600,150
                                             M700,50 700,150
